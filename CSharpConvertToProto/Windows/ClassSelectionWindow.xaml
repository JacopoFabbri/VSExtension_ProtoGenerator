<Window x:Class="CSharpConvertToProto.ClassSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Seleziona Classe" Height="300" Width="400">
    <Grid>
        <!-- Barra di ricerca -->
        <TextBox Name="SearchTextBox" Margin="10,10,10,0" VerticalAlignment="Top" 
                 HorizontalAlignment="Stretch" Height="25" 
                 TextChanged="OnSearchTextChanged">
        </TextBox>

        <!-- Lista delle classi -->
        <ListBox Name="ClassList" Margin="10,40,10,10" SelectionMode="Single"/>

        <!-- Bottone di selezione -->
        <Button Content="Seleziona" HorizontalAlignment="Right" Margin="10" VerticalAlignment="Bottom" Width="80"
                Click="OnSelectClick"/>
    </Grid>
</Window>
